{
    "name": "b2brouter/woocommerce-plugin",
    "description": "B2Brouter for WooCommerce - Generate and send electronic invoices from WooCommerce orders",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "B2Brouter",
            "email": "devs@b2brouter.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "b2brouter/b2brouter-php": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "B2Brouter\\WooCommerce\\": "includes/"
        }
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "^10.3",
        "php-stubs/wordpress-stubs": "^6.8",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test:coverage": [
            "phpunit --coverage-html coverage/"
        ],
        "test:filter": [
            "phpunit --filter"
        ],
        "build": [
            "./build-release.sh"
        ],
        "check-sdk": [
            "@composer show b2brouter/b2brouter-php"
        ],
        "post-install-cmd": [
            "@php -r \"echo 'B2Brouter PHP SDK installed successfully.\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'B2Brouter PHP SDK updated successfully.\\n';\""
        ]
    },
    "scripts-descriptions": {
        "test": "Run all PHPUnit tests",
        "test:coverage": "Run tests with HTML coverage report (output to coverage/)",
        "test:filter": "Run specific test by name (e.g., composer test:filter test_validate_api_key)",
        "build": "Build distribution package with vendor/ included",
        "check-sdk": "Show installed B2Brouter PHP SDK version and details"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
